@using SportsForum.Common
@model SportsForum.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {@GlobalConstants.SystemName}!";
}

<div class="text-center" style="padding-bottom: 2em">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media" style="padding-bottom: 2em">
            <img src="@category.ImageUrl" width="100" class="mr-3" alt="@category.Title">
            <div class="media-body">
                <h5 class="mt-0"><a href="@category.Url">@category.Title (@category.PostsCount)</a></h5>
                @category.Description
            </div>
        </div>
    }
</div>